<%- include('./partials/header.ejs') %>
<body>
    <div class="box">
           <h1>To Do-App</h1>
    </div>
        
    <div class="input-box">
        <form class="" action="/" method="post">
            <input class="input" type="text" name="newItem" placeholder="Enter Your List" autocomplete="off" >
            <button  class="btn" type="submit">
                <img class="add-img" src="images/add.png" alt="buttonpng" />
              </button>
        </form>
    </div>
        
    <div class="item-box">
        <% newList.forEach(item => { %>
            <form action="/delete" method="post">
                <div class="listItem">
                    <input class="checkbox" type="checkbox"  name="itemChecked" value="<%=item.id%>" onChange="this.form.submit()">
                    <p class="list-element" ><%= item.name %></p>
                </div>
            </form>
        <% }); %>
    </div>
    
</body>
<%- include('./partials/footer.ejs') %>